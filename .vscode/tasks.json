{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build snkrx",
      "type": "angularcli",
      "option": "build",
      "args": ["snkrx"],
      "angular": "cf",
      "problemMatcher": ["$tsc-angular-cli"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start snkrx",
      "type": "angularcli",
      "option": "serve",
      "args": ["snkrx"],
      "problemMatcher": [
        "$tsc-angular-cli-watch",
        {
          "base": "$sass-loader",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Generating browser application bundles (phase: setup)...",
            "endsPattern": "(Failed to compile.|Compiled successfully.)"
          }
        }
      ],
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Stop all",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
